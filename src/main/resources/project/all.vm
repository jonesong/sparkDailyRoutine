#parse("/velocity/layout.vm")
#@mainLayout()

<div class="panel panel-default">
	<div class="panel-heading">$currentUser's $msg.get("PROJECTS_HEADING_ALL")</div>
		<table>
			<thead>
				<tr>
					<th>$msg.get("PROJECT_NAME")</th>
					<th>$msg.get("PROJECT_NOTE")</th>
				   	<th width="100"></th>
				    <th width="100"></th>
				</tr>
			</thead>
		    <tbody>
			#foreach($project in $projects)
				<tr>
					<td><a href="$WebPath.getPROJECTS()$project.getId()">$project.getName()</a></td>
					<td>$project.getNote()</td>
					<td><a href="$WebPath.getPROJECTS()edit/$project.getId()" class="btn btn-success custom-width">edit</a></td>
					<td><a href="$WebPath.getPROJECTS()del/$project.getId()" class="btn btn-danger custom-width" onclick="return confirmbox();">delete</a></td>
				</tr>
			#end
		    </tbody>
		</table>
</div>
<p></p>
<a href="/project/new/">Add New $msg.get("PROJECTS_HEADING_ALL")</a>

#end
